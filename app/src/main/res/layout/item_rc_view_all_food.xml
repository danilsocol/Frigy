<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/icon_food_category"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/liquid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_food_category"
        >

        <TextView
            android:id="@+id/name_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            android:text="Название"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/important"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:text="Важный"
            app:layout_constraintTop_toBottomOf="@+id/name_food"
            app:layout_constraintBottom_toTopOf="@id/max_quantity"
            app:layout_constraintStart_toStartOf="parent"/>

        <CheckBox
            android:id="@+id/check_box_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/important"
            app:layout_constraintBottom_toBottomOf="@id/important"
            app:layout_constraintStart_toEndOf="@id/important"
            />

        <TextView
            android:id="@+id/max_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Максимальное кол-во"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/important"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/max_quantity_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/max_quantity"
            app:layout_constraintBottom_toBottomOf="@id/max_quantity"
            app:layout_constraintStart_toEndOf="@id/max_quantity"/>

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="литров"
            app:layout_constraintTop_toTopOf="@id/max_quantity_edit"
            app:layout_constraintBottom_toBottomOf="@id/max_quantity_edit"
            app:layout_constraintStart_toEndOf="@id/max_quantity_edit"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/close"
        android:src="@drawable/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageButton>



</androidx.constraintlayout.widget.ConstraintLayout>